---
interface Props {
  title: string;
  description: string;
}
const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <style is:global>
      *,
      ::before,
      ::after {
        box-sizing: border-box;
      }
      body {
        margin: 0;
        font-family: "Roboto", sans-serif;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #212529;
        text-align: left;
        background-color: #fff;
      }

      header {
        font-size: 1.7rem;
        text-align: center;
        padding: 1rem;
        color: cornflowerblue;
        width: 100%;
      }

      main {
        padding: 1rem;
        max-width: 1200px;
        margin: 0 auto;
        & p {
          font-size: 1rem;
          margin: 0.5rem;
        }

        & .recipe {
          display: flex;
          flex-direction: column;
          padding: 1rem;
          gap: 1rem;
          text-align: left;
          line-height: 1.5;

          & .recipe-image-placeholder,
          .recipe-image {
            width: 100%;
            height: 300px;
            object-fit: cover;
          }

          & .recipe-image-placeholder {
            background-color: #eee;
            position: relative;
            opacity: 0.5;
          }

          & .recipe-image-placeholder::before {
            content: "Loading...";
            position: absolute;
            bottom: 30px;
            left: 30px;
            font-size: 3rem;
            font-weight: bold;
          }

          & .recipe-header {
            display: flex;
            align-items: center;
            gap: 10px;

            & button {
              background: transparent;
              border: none;
              padding: 0;
              & img {
                width: 50px;
                height: 50px;
              }
            }
            & button:hover {
              cursor: pointer;
            }
            & .recipe-title {
              font-size: 1.5rem;
              font-weight: 700;
            }
          }
        }
      }
    </style>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script
      src="https://unpkg.com/htmx.org@1.9.9"
      integrity="sha384-QFjmbokDn2DjBjq+fM+8LUIVrAgqcNW2s0PjAxHETgRn9l4fvX31ZxDxvwQnyMOX"
      crossorigin="anonymous"
      defer></script>
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body hx-boost="true">
    <slot />
  </body>
</html>
